<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobiilerakendus.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="DotNetBot"
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a submarine number ten" />

            <Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="CounterLabel"
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <HorizontalStackLayout
                Spacing="10"
                HorizontalOptions="Center">
                <Button
                    x:Name="CounterBtn"
                    Text="Vajuta siia" 
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill" 
                />
                <Button
                    x:Name="ResetBtn"
                    Text="Tagasi nulli" 
                    BackgroundColor="Coral"
                    Clicked="ResetBtn_Clicked"
                />
            </HorizontalStackLayout>
            <VerticalStackLayout
                HeightRequest="200"
                VerticalOptions="End"
                Padding="50,51,50, 50">
                <Image
                x:Name="pilt"
                Source="pilt.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a submarine number ten"
                />
            </VerticalStackLayout>

            <HorizontalStackLayout
                Spacing="10"
                HorizontalOptions="Center">
                <Button
                    x:Name="Upbtn"
                    Text="Üles" 
                    BackgroundColor="Coral"
                    Clicked="Upbtn_Clicked"
                />
                <Button
                    x:Name="Downbtn"
                    Text="Alla" 
                    BackgroundColor="Coral"
                    Clicked="Downbtn_Clicked"
                />

            </HorizontalStackLayout>
            <HorizontalStackLayout
                            Spacing="10">
                <Button
                    x:Name="Opacity"
                    Text="Läbipaistvus pilt" 
                    BackgroundColor="DarkBlue"
                    Clicked="Opacity_Clicked"
                    WidthRequest="100"
                />
                <Button
                    x:Name="Scale"
                    Text="Suurus pilt" 
                    BackgroundColor="DarkBlue"
                    Clicked="Scale_Clicked"
                     WidthRequest="100"
                />
                <Button
                    x:Name="Cornerrad"
                    Text="Ümarda nupud" 
                    BackgroundColor="DarkBlue"
                    Clicked="Cornerrad_Clicked"
                     WidthRequest="100"
                />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
